<div class = "newspaper" id ="filesNewspaper">
  <% @files.each_with_index do |file, index| %>
    <div id= <%= "file_line#{index}" %>
      <% if index.even? %>
        class="file-even"
      <% elsif index.odd? %>
        class="file-odd" 
      <% end %>
    >
      <span class="filename-checkbox">
      <%= check_box_tag "file[]","file.id", false%>
      </span>
      <%= text_field_tag "file[]", file.name, maxlength: 30, class: "small-text", id: "file_text#{index}", onclick: "unabbrevIfAbbrev(this,#{index})", onblur: "abbrevIfTextOverflow(this.id,#{index})", onchange: "updateOriginalFileName(this,#{index})"%>
    </div>
  <% end %>
  <% @files.each_with_index do |file, index| %>
    <script>
        addTopOrBottomClassToFileInNewspaper('<%= "file_line#{index}" %>', 'filesNewspaper', <%= index + 1 %>, <%= @files.length %>);
        originalFileNames.values[<%= index %>]='<%=  file.name %>';
        abbrevIfTextOverflow('<%= "file_text#{index}" %>', <%= index %>);
    </script>

  <% end %>
</div>